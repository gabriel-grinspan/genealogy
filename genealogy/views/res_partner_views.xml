<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_geneaology" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit.geneaology</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='street2']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='vat']" position="before">
                    <field name="current_address_id" options="{'no_create': True}" />
                </xpath>

                <xpath expr="//page[@name='contact_addresses']" position="replace">
                    <page string="Personal Information" name="contact_information" autofocus="autofocus" colspan="4">
                        <group name="names" string="Names">
                            <field name="alias_ids" nolabel="1" colspan="2" mode="tree">
                                <tree string="Aliases" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="name" />
                                    <field name="alias_type_ids" widget="many2many_tags" />
                                </tree>
                            </field>
                            <field name="name_orig_ids" mode="kanban" domain="[('id', '!=', id)]" colspan="2" />
                        </group>

                        <group>
                            <field name="sex" />
                            <field name="can_contact" />
                        </group>

                        <group string="Dates">
                            <field name="date_of_birth" />
                            <field name="birth_after_sunset" />
                            <field name="lunisolar_date_of_birth" />
                            <field name="date_of_death" />
                            <field name="death_after_sunset" />
                            <field name="lunisolar_date_of_death" />
                        </group>

                        <group string="Parents">
                            <field name="father_id" domain="[('id', 'not in', [id, mother_id]), ('id', 'not in', children_ids)]" />
                            <field name="mother_id" domain="[('id', 'not in', [id, father_id]), ('id', 'not in', children_ids)]" />
                        </group>

                        <label for="spouse_ids" />
                        <field name="spouse_ids" domain="[('id', 'not in', [id, father_id, mother_id]), ('id', 'not in', children_ids)]" widget="many2many_tags" />
                        <label for="relationship_ids" />
                        <field name="relationship_ids" context="{'partner_id': id}" />

                        <label for="children_ids" />
                        <field name="children_ids" />
                    </page>

                    <page name="addresses" string="Past Addresses">
                        <label for="address_ids" />
                        <field name="address_ids"
                               mode="kanban"
                               context="{
                                'default_partner_id': active_id,
                                'default_street': street,
                                'default_street2': street2,
                                'default_city': city,
                                'default_state_id': state_id,
                                'default_zip': zip,
                                'default_country_id': country_id,
                                'default_address_type': 'home'
                                }"/>
                    </page>
                </xpath>

                <!-- <xpath expr="//page[@name='contact_addresses']" position="attributes">
                    <attribute name="autofocus" value="0" />
                    <attribute name="invisible" value="1" />
                </xpath> -->

                <!-- <xpath expr="//page[@name='sales_purchases']" position="replace">
                    <attribute name="invisible" value="1" />
                </xpath> -->
            </field>
        </record>

        <record id="res_partner_address_view_form" model="ir.ui.view">
            <field name="name">res.partner.address.view.form</field>
            <field name="model">res.partner.address</field>
            <field name="arch" type="xml">
                <form string="Address">
                    <field name="address_type" required="1" widget="radio" options="{'horizontal': true}"/>
                    <hr/>
                    <group>
                        <label for="street" string="Address" />
                        <div class="o_address_format" name="div_address">
                            <field name="street" placeholder="Street..." class="o_address_street"/>
                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="city" placeholder="City" class="o_address_city"/>
                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                            <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                        </div>
                        <field name="phone" widget="phone" />
                    </group>
                    <group name="residents" string="Residents">
                        <field name="partner_ids" nolabel="1" colspan="2" />
                    </group>
                    <group>
                        <field name="head_of_household_id" domain="[('id', 'in', partner_ids)]" />
                        <field name="comment" placeholder="Internal notes..." nolabel="1" colspan="2"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="res_partner_address_view_kanban" model="ir.ui.view">
            <field name="name">res.partner.address.view.kanban</field>
            <field name="model">res.partner.address</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="phone"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="city"/>
                    <field name="zip"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <field name="head_of_household_id" />
                    <field name="head_of_household_id_image_128" />

                    <templates>
                        <t t-name="kanban-box">
                            <div class="color oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Contact image" t-att-src="kanban_image('res.partner', 'image_128', record.head_of_household_id.raw_value)" />
                                </div>
                                <div class="oe_kanban_details">
                                    <div>
                                        <field name="street"/>
                                    </div>
                                    <div>
                                        <field name="street2"/>
                                    </div>
                                    <div>
                                        <field name="city"/><t t-if="record.city and record.state_id">, </t>
                                        <field name="state_id"/><t t-if="record.zip"> </t>
                                        <field name="zip"/>
                                    </div>
                                    <div>
                                        <field name="country_id"/>
                                    </div>
                                    <div t-if="record.phone.raw_value">Phone: <t t-esc="record.phone.value"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

