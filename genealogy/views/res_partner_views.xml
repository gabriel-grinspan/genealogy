<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_geneaology" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit.geneaology</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='street2']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='vat']" position="before">
                    <field name="current_address_id" options="{'no_create': True}" />
                    <field name="sex" />
                    <field name="can_contact" />
                </xpath>

                <xpath expr="//page[@name='contact_addresses']" position="replace">
                    <page string="Personal Information" name="contact_information" autofocus="autofocus" colspan="4">
                        <group name="names" string="Names">
                            <field name="alias_ids" nolabel="1" colspan="2" mode="tree">
                                <tree string="Aliases" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="name" />
                                    <field name="alias_type_ids" widget="many2many_tags" />
                                </tree>
                            </field>
                            <field name="name_orig_ids" mode="kanban" domain="[('id', '!=', id)]" colspan="2" />
                        </group>

                        <group string="Dates">
                            <field name="date_of_birth" />
                            <field name="birth_after_sunset" />
                            <field name="lunisolar_date_of_birth" />
                            <field name="date_of_death" />
                            <field name="death_after_sunset" />
                            <field name="lunisolar_date_of_death" />
                        </group>
                    </page>

                    <page name="relationships" string="Family">
                        <group string="Parents" colspan="2">
                            <field name="father_id" domain="[
                                ('id', 'not in', [id, mother_id]),
                                ('id', 'not in', children_ids),
                                ('sex', '!=', 'female'),
                            ]" />
                            <field name="mother_id" domain="[
                                ('id', 'not in', [id, father_id]),
                                ('id', 'not in', children_ids),
                                ('sex', '!=', 'male'),
                            ]" />
                        </group>

                        <group string="Children" colspan="2">
                            <field name="children_ids"
                               mode="kanban"
                               no_label="1"
                               readonly="1" />
                        </group>

                        <group string="Partner History" colspan="4">
                            <field name="spouse_ids" domain="[
                                ('id', 'not in', [id, father_id, mother_id]),
                                ('id', 'not in', children_ids)
                            ]" widget="many2many_tags" />

                            <field name="spouse_type" invisible="1" />
                            <field name="relationship_ids" no_label="1" mode="tree" invisible="spouse_type != 'male'" widget="list_renderer_no_link">
                                <tree editable="top" create='0'>
                                    <field name="female_id" readonly="1" />
                                    <field name="status" />
                                    <field name="start_date" />
                                    <field name="end_date" />
                                </tree>
                            </field>
                            <field name="relationship_ids" mode="tree" invisible="spouse_type != 'female'" widget="list_renderer_no_link">
                                <tree editable="top" create="0">
                                    <field name="male_id" readonly="1" />
                                    <field name="status" />
                                    <field name="start_date" />
                                    <field name="end_date" />
                                </tree>
                            </field>
                            <field name="relationship_ids" mode="tree" invisible="spouse_type not in ['mixed', False] or not relationship_ids" widget="list_renderer_no_link">
                                <tree editable="top" create="0">
                                    <field name="male_id" readonly="1" />
                                    <field name="female_id" readonly="1" />
                                    <field name="status" />
                                    <field name="start_date" />
                                    <field name="end_date" />
                                </tree>
                            </field>
                            <div class="alert alert-info" role="alert" invisible="relationship_ids" colspan="2">No relationship history</div>
                            <button name="action_create_relationship_wizard" type="object" string="Add Relationship" colspan="2" />
                        </group>
                    </page>

                    <page name="addresses" string="Past Addresses">
                        <label for="address_ids" />
                        <field name="address_ids"
                               mode="kanban"
                               context="{
                                'default_partner_id': active_id,
                                'default_street': street,
                                'default_street2': street2,
                                'default_city': city,
                                'default_state_id': state_id,
                                'default_zip': zip,
                                'default_country_id': country_id,
                                'default_address_type': 'home'
                                }" />
                    </page>
                </xpath>
            </field>
        </record>

        <record id="res_partner_address_view_form" model="ir.ui.view">
            <field name="name">res.partner.address.view.form</field>
            <field name="model">res.partner.address</field>
            <field name="arch" type="xml">
                <form string="Address">
                    <field name="address_type" required="1" widget="radio" options="{'horizontal': true}" />
                    <hr />
                    <group>
                        <label for="street" string="Address" />
                        <div class="o_address_format" name="div_address">
                            <field name="street" placeholder="Street..." class="o_address_street" />
                            <field name="street2" placeholder="Street 2..." class="o_address_street" />
                            <field name="city" placeholder="City" class="o_address_city" />
                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}" />
                            <field name="zip" placeholder="ZIP" class="o_address_zip" />
                            <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' />
                        </div>
                        <field name="phone" widget="phone" />
                    </group>

                    <group name="residents" string="Residents">
                        <field name="partner_ids" invisible="1" />
                        <field name="head_of_household_id" domain="[('id', 'in', partner_ids)]" />

                        <field name="current_partner_ids" mode="tree" colspan="2">
                            <tree>
                                <field name="name" />
                                <field name="phone" />
                                <field name="email" />
                            </tree>
                        </field>

                        <field name="past_partner_ids" mode="tree" colspan="2">
                            <tree>
                                <field name="name" />
                                <field name="phone" />
                                <field name="email" />
                            </tree>
                        </field>

                        <field name="comment" placeholder="Internal notes..." nolabel="1" colspan="2" />
                    </group>
                </form>
            </field>
        </record>

        <record id="res_partner_address_view_kanban" model="ir.ui.view">
            <field name="name">res.partner.address.view.kanban</field>
            <field name="model">res.partner.address</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id" />
                    <field name="phone" />
                    <field name="street" />
                    <field name="street2" />
                    <field name="city" />
                    <field name="zip" />
                    <field name="state_id" />
                    <field name="country_id" />
                    <field name="head_of_household_id" />
                    <field name="head_of_household_id_image_128" />

                    <templates>
                        <t t-name="kanban-box">
                            <div class="color oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Contact image" t-att-src="kanban_image('res.partner', 'image_128', record.head_of_household_id.raw_value)" />
                                </div>
                                <div class="oe_kanban_details">
                                    <div>
                                        <field name="street" />
                                    </div>
                                    <div>
                                        <field name="street2" />
                                    </div>
                                    <div>
                                        <field name="city" /><t t-if="record.city and record.state_id">, </t>
                                        <field name="state_id" /><t t-if="record.zip"> </t>
                                        <field name="zip" />
                                    </div>
                                    <div>
                                        <field name="country_id" />
                                    </div>
                                    <div t-if="record.phone.raw_value">Phone: <t t-esc="record.phone.value" /></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_partner_relationship_tree" model="ir.ui.view">
            <field name="name">res.partner.relationship.view.tree</field>
            <field name="model">res.partner.relationship</field>
            <field name="arch" type="xml">
                <tree string="Partnerships" editable="bottom">
                    <field name="male_id" />
                    <field name="female_id" />
                    <field name="status" />
                    <field name="start_date" />
                    <field name="end_date" />
                </tree>
            </field>
        </record>

        <record id="view_partner_alias_tree" model="ir.ui.view">
            <field name="name">res.partner.alias.view.tree</field>
            <field name="model">res.partner.alias</field>
            <field name="arch" type="xml">
                <tree string="Partnerships">
                    <field name="partner_id" />
                    <field name="name" />
                    <field name="alias_type_ids" widget="many2many_tags" />
                </tree>
            </field>
        </record>

        <record id="view_partner_alias_type_form" model="ir.ui.view">
            <field name="name">res.partner.alias.type.view.form</field>
            <field name="model">res.partner.alias.type</field>
            <field name="arch" type="xml">
                <form string="Alias Types">
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" name="get_aliases" icon="fa-id-card-o">
                            <field string="Aliases" name="alias_count" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <field name="name" />
                    </group>
                </form>
            </field>
        </record>

        <!-- Menu Items -->
        <record id="action_partner_addresses" model="ir.actions.act_window">
            <field name="name">Contact Addresses</field>
            <field name="res_model">res.partner.address</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record id="action_partner_relationships" model="ir.actions.act_window">
            <field name="name">Contact Relationships</field>
            <field name="res_model">res.partner.relationship</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_partner_alias_types" model="ir.actions.act_window">
            <field name="name">Contact Alias Types</field>
            <field name="res_model">res.partner.alias.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="res_partner_menu_contacts"
            name="Contacts"
            action="contacts.action_contacts"
            parent="contacts.res_partner_menu_contacts"
            sequence="1" />

        <menuitem id="res_partner_address_menu_contacts"
            name="Contact Addresses"
            action="action_partner_addresses"
            parent="contacts.res_partner_menu_contacts"
            sequence="2" />

        <menuitem id="res_partner_relationship_menu_contacts"
            name="Contact Relationships"
            action="action_partner_relationships"
            parent="contacts.res_partner_menu_contacts"
            sequence="3" />

        <menuitem id="res_partner_alias_menu_contacts"
            name="Contact Alias Types"
            action="action_partner_alias_types"
            parent="contacts.res_partner_menu_config"
            sequence="2" />
    </data>
</odoo>
